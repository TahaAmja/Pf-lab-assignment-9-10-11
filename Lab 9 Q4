#include <stdio.h>

int main() {
    float n1, n2, result;
    char op;

    printf("Enter two numbers: ");
    scanf("%f %f", &n1, &n2);

    printf("Choose an operation (+, -, *, /): ");
    scanf(" %c", &op);

    if (op == '+') {
        result = n1 + n2;
    } else if (op == '-') {
        result = n1 - n2;
    } else if (op == '*') {
        result = n1 * n2;
    } else if (op == '/') {
        if (num2 != 0) {
            result = num1 / num2;
        } else {
            printf("Error: Division by zero\n");
        printf("Invalid operation\n");
        return 1;
    }

    printf("Result: %.3f\n", result);

    return 0;
}
